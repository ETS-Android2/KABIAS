<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cari"
        app:layout_constraintBottom_toBottomOf="@+id/tvAwal"
        app:layout_constraintEnd_toStartOf="@+id/tvTujuan"
        app:layout_constraintStart_toEndOf="@+id/tvAwal"
        app:layout_constraintTop_toTopOf="@+id/tvAwal" />

    <TextView
        android:id="@+id/tvAwal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:text="04:59"
        android:textColor="@color/colorTextBlack"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/lato"
        android:text="04:59"
        android:textColor="@color/colorTextBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAwal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAwal" />

    <TextView
        android:id="@+id/tvKereta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato_bold"
        android:text="KA. 7104"
        android:textColor="@color/colorTextBlack"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:alpha="0.5"
        android:layout_marginTop="16dp"
        android:background="@color/colorDefault"
        app:layout_constraintEnd_toEndOf="@+id/tvTujuan"
        app:layout_constraintStart_toStartOf="@+id/tvAwal"
        app:layout_constraintTop_toBottomOf="@+id/tvKereta" />



</androidx.constraintlayout.widget.ConstraintLayout>