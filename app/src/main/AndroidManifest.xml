<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kabias">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.KABIAS">
        <activity android:name=".Activity.DetailStasiunActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.DetailJadwalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ListJadwalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ListKeretaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ListStasiunActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.InformasiActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.PetaRuteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.JadwalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>